<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_home"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_margin="10dp"
    android:elevation="15dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    android:theme="@style/TextInputStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_text_block_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            tools:text="Block 0"/>

        <TextView
            android:id="@+id/card_text_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_text_block_height"
            app:layout_constraintTop_toBottomOf="@id/card_text_block_height"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            tools:text="Hash: fgwjhvwkhjfvwhvhwvwhj979869746jhgfhgfh76485"/>

        <TextView
            android:id="@+id/card_text_previous_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_text_hash"
            app:layout_constraintTop_toBottomOf="@id/card_text_hash"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            tools:text="Prev: N/A"/>

        <TextView
            android:id="@+id/card_text_nounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_text_previous_hash"
            app:layout_constraintTop_toBottomOf="@id/card_text_previous_hash"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            tools:text="Nounce: 972014"/>

        <TextView
            android:id="@+id/card_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_text_nounce"
            app:layout_constraintTop_toBottomOf="@id/card_text_nounce"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            tools:text="Status: 2"/>

        <TextView
            android:id="@+id/card_text_block_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_text_status"
            app:layout_constraintTop_toBottomOf="@id/card_text_status"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            tools:text="24/04/2022, 11:05:05 PM"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>